<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Saved Articles</h1>
    <p class="lead">Your Saved Articles.</p>
  </div>
</div>

<div id="cardholder">
    <div class="card">
        <div class="card-header">
            Featured
        </div>
        <div class="card-body">
            <h5 class="card-title">Special title treatment</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            <a href="#" id="delete-article" class="btn btn-primary">Delete From Saved</a>
            <a href="#" id="article-notes" class="btn btn-primary">Article Notes</a>
        </div>
    </div>
      {{#each articles}}
    <div class="card">
        <div class="card-header">
            Featured
        </div>
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.preview}}</p>
            <p class="card-text">{{this.link}}</p>
            <a href="#" id="save-article" class="btn btn-primary" data-id={{this.id}}>Save Article</a>
        </div>
    </div>
    {{/each}}
</div>


